{
    "manifest_version": 3,
    "name": "MyNotification",
    "version": "1.9",
    "description": "Gerador de lembretes em formato de notificação",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "alarms",
      "notifications",
      "activeTab",
      "scripting"
    ]
  }
  